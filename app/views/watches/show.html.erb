<div class="container">
  <div class="card-watch-show">
    <div>
      <%= @watch.photo.attached? ? cl_image_tag(@watch.photo.key, height: 480, width: 390, crop: :fill) : image_path("https://picsum.photos/390/480", width: 390, height: 480, crop: :fill)%>
    </div>
    <div>
      <h2><%= @watch.brand %></h2>
      <h2><%= @watch.model %></h2>
      <p><%= @watch.description %></p>
    </div>
    <div>
      <p><%= @watch.price %></p>
      <p><%= @user.first_name%></p>
    </div>
  </div>
</div>


<div class="container">
  <div class="form-wrapper" style="width: 400px; margin: 0 auto;">
    <%= simple_form_for [@watch, @booking] do |f| %>
      <%= f.input :start_date, as: :string, required: false, input_html: {id: "range_start"} %>
      <%= f.input :end_date, as: :string, required: false, input_html: {id: "range_end"} %>
      <%= f.button :submit, "Rent a watch", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<div>
  <% if policy(@watch).destroy? %>
    <%= link_to watch_path(@watch), method: :delete, data: { confirm: "Are you sure ?"} do %>
      <i class="fa-regular fa-trash-can"></i>
    <% end %>
  <% end %>
</div>

<div>
  <% if policy(@watch).update? %>
    <%= link_to "Edit watch", edit_watch_path(@watch) %>
  <% end %>
</div>
